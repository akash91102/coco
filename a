if (inputElement) {
    // Check if the field is actually empty vs. containing 0
    let isFieldEmpty = inputElement.value === '' || 
                      inputElement.getAttribute('data-was-empty') === 'true' ||
                      (inputElement.value === '0' && !inputElement.dataset.userEntered);
    
    if (isFieldEmpty) {
        requirementHaircutValue = '';
    } else {
        requirementHaircutValue = inputElement.value;
    }
}
